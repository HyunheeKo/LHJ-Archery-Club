@page "/"

@using Radzen.Blazor
@using Radzen
@inject NavigationManager NavigationManager

<br />

<h2 class="text-center">오늘도 화이팅!!</h2>

<div class="row">
    <div class="text-center">
        <RadzenImage Path="/lhj_logo.png"  Style="width: 60%; margin: 3rem;" />
    
    </div>
</div>

<div class="row">
    <div class="col-12 mt-3" style="height:80px;">
        <RadzenButton Click=@(args => OnClick_NewGame("Info icon button")) Icon="privacy_tip" class="w-100 h-100" ButtonStyle="ButtonStyle.Info" Text="새게임 시작" Style="font-size:larger" />

    </div>
    <div class="col-12 mt-5" style="height:80px;">

        <RadzenButton Click=@(args => OnClick_Statastic("Info icon button")) Icon="timeline" class="w-100 h-100" ButtonStyle="ButtonStyle.Success" Text="기록 보기" Style="font-size:larger" />

    </div>
</div>


@code{

    void OnClick_NewGame(string buttonName)
    {
        NavigationManager.NavigateTo("Scoreboard");
        //console.Log($"{buttonName} clicked");
    }

    void OnClick_Statastic(string buttonName)
    {
        NavigationManager.NavigateTo("History");
        //console.Log($"{buttonName} clicked");
    }
}